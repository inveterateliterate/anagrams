<h1>Words</h1>

<table class="table table-striped">
<thead>
<th>Text</th>
<th>Letters</th>
<th>Edit</th>
<th>Delete</th>
</thead>

<tbody>
<% @words.each do |x| %>
<tr>
	<td><a href="<%= "/words/#{x.id}" %>"><%= "#{x.text}" %> </td>
	<td><%= "#{x.letters}" %> </td>
	<td><a href="<%= "/words/#{x.id}/edit" %>">Edit</a> </td>
	<td>
		<form action="<%= "/words/#{x.id}" %>" method="post">
			<input type="hidden" name="_method" value="delete" />
			<button class="btn btn-danger">Delete</button>
		</form>
	</td>
</tr>
<%end%>
</tbody>
</table>